<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ListaTareas.MVVMListaTareas.Views"
       x:Class="ListaTareas.AppShell">

    <!-- Página principal -->
    <ShellContent Title="Lista Tareas" ContentTemplate="{DataTemplate views:Lista}" Route="Lista" />

    <!-- Página de tareas completadas -->
    <ShellContent Title="Completadas" ContentTemplate="{DataTemplate views:Completadas}" Route="Completadas" />

</Shell>
