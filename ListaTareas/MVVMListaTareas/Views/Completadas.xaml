<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaTareas.MVVMListaTareas.Views.Completadas"
             Title="Completadas"
             BackgroundColor="#333333">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <!-- Lista de tareas Completadas -->
            <CollectionView ItemsSource="{Binding TareasCompletadas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#444444" CornerRadius="10">
                            <StackLayout Spacing="10">

                                <!-- Tarea con CheckBox -->
                                <StackLayout Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding EstaCompletada, Mode=TwoWay}"
                                              CheckedChanged="OnCheckBoxCheckedChanged" />
                                    <Label Text="Enviar a Activas"
                                           VerticalOptions="Center"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>
                                <!-- Nombre de la tarea -->
                                <Label Text="{Binding NombreTarea}"
                                            FontSize="22"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            Margin="5,5,0,0" />

                                <!-- Botón eliminar -->
                                <Button Text="Eliminar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarTareaCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Black"
                                        TextColor="White"
                                        CornerRadius="14"
                                        FontAttributes="Bold" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botón Volver -->
            <Button Text="Volver"
                    Command="{Binding CancelarCommand}" 
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="14"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
