<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ListaTareas.MVVMListaTareas.Views;assembly=ListaTareas"
             x:Class="ListaTareas.MVVMListaTareas.Views.Lista"
             Title="Lista de Tareas"
             BackgroundColor="#333333">

    <ContentPage.Resources>
        <Style x:Key="ButtonStyleBase" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="WidthRequest" Value="90" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="WidthRequest" Value="90"/>
            <Setter Property="HeightRequest" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Entry Placeholder="Nueva tarea"
                   Text="{Binding NuevaTarea}" />

            <Button Text="AÃ±adir"
                    Command="{Binding AgregarTareaCommand}"
                    Style="{StaticResource ButtonStyleBase}" />

            <CollectionView ItemsSource="{Binding TareasActivas}" VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" Margin="10,20" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                            <Frame.Triggers>
                                <!-- DataTrigger para cambiar color segÃºn la propiedad Importancia -->
                                <DataTrigger TargetType="Frame" Binding="{Binding Importancia}" Value="True">
                                    <Setter Property="BackgroundColor" Value="Khaki"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Frame" Binding="{Binding Importancia}" Value="False">
                                    <Setter Property="BackgroundColor" Value="White" />
                                </DataTrigger>
                            </Frame.Triggers>

                            <Grid Padding="10" ColumnSpacing="10" RowSpacing="10" VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox IsChecked="{Binding Importancia, Mode=TwoWay}" 
                                          CheckedChanged="OnCheckedChanged" />

                                <Label Text="{Binding NombreTarea}" 
                                       VerticalOptions="Center" 
                                       FontSize="Small" 
                                       Grid.Column="1"
                                       TextColor="Black" 
                                       FontAttributes="Bold"/>

                                <Button Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarTareaCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#4B4B4B"
                                        TextColor="White" 
                                        CornerRadius="10"
                                        FontSize="14"
                                        Margin="5,0,0,0"
                                        Grid.Column="2">
                                    <Button.Text>Eliminar</Button.Text>
                                </Button>

                                <Button Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarTareaCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#D3D3D3"
                                        TextColor="Black" 
                                        CornerRadius="10"
                                        FontSize="14"
                                        Margin="5,0,0,0"
                                        Grid.Column="3">
                                    <Button.Text>Editar</Button.Text>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
