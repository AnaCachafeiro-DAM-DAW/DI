<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ListaTareas.MVVMListaTareas.Views;assembly=ListaTareas"
             x:Class="ListaTareas.MVVMListaTareas.Views.Lista"
             Title="Lista de Tareas"
             BackgroundColor="DarkSlateGrey"/>

<!-- Estilos -->
    <ContentPage.Resources>
        <!-- Botones base -->
        <Style x:Key="ButtonStyleBase" TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HeightRequest" Value="40" />
        </Style>

        <!-- Botón Agregar -->
        <Style x:Key="AgregarButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}">
            <Setter Property="BackgroundColor" Value="DarkGray" />
        </Style>

        <!-- Botón Eliminar -->
        <Style x:Key="EliminarButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}">
            <Setter Property="BackgroundColor" Value="Gray" />
        </Style>

        <!-- Botón Editar -->
        <Style x:Key="EditarButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}">
            <Setter Property="BackgroundColor" Value="#A9A9A9" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="FontSize" Value="18" />
        </Style>

        <!-- Etiquetas -->
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <!-- Placeholder -->
        <Style TargetType="Entry">
            <Setter Property="PlaceholderColor" Value="Gray" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="Black" />
        </Style>

        <!-- Sombra para CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="Black" Opacity="0.5" Radius="5" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <!-- Campo de texto nueva tarea -->
            <Entry Placeholder="Nueva tarea"
                   Text="{Binding NuevaTarea}" />

            <!-- Botón agregar tarea -->
            <Button Text="Agregar Tarea"
                    Command="{Binding AgregarTareaCommand}"
                    Style="{StaticResource AgregarButtonStyle}" />

            <!-- Lista de tareas -->
            <CollectionView ItemsSource="{Binding TareasActivas}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <!-- CheckBox completar tarea -->
                            <CheckBox IsChecked="{Binding EstaCompletada}" />

                            <!-- Tarea -->
                            <Label Text="{Binding NombreTarea}" VerticalOptions="Center" FontSize="Small" />

                            <!-- Botón eliminar tarea -->
                            <Button Text="Eliminar"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarTareaCommand}"
                                    CommandParameter="{Binding .}"
                                    Style="{StaticResource EliminarButtonStyle}" />

                            <!-- Botón editar tarea -->
                            <Button Text="Editar"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarTareaCommand}"
                                    CommandParameter="{Binding .}"
                                    Style="{StaticResource EditarButtonStyle}" />

                            <!-- CheckBox tarea completada -->
                            <CheckBox IsChecked="{Binding EstaCompletada, Mode=TwoWay}"
                                      CheckedChanged="OnCheckBoxCheckedChanged" />

                            <!-- Texto indicando la acción del CheckBox -->
                            <Label Text="Completada" VerticalOptions="Center" />
                        </StackLayout>
                   
                    </DataTemplate>
               
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
   
    </ContentPage.Content>
</ContentPage>
